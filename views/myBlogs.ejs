<%- include('partials/header') -%>

<h2 style="text-align: center; margin-bottom: 60px;">My Blogs</h2>

<ul class="blogs">
    <% if(blogs.length===0){ %>
        <p style="text-align: center;">You haven't written any blogs yet.</p>
        <% } else{ %>
            <% blogs.forEach(blog =>{ %>
                <li class="blog">
                    <img src="<%= blog.coverImageURL %>" alt="blog image">
                    <h4><%= blog.title %></h4>
                    <p><%= blog.body.length >100 ? blog.body.substring(0,100) + '...':blog.body %></p>
                    <small>Posted on <%= blog.createdAt.toDateString() %></small><br/><br/>
                    <a href="/blogs/<%= blog._id %>" class="btn">Read More</a>
                </li>
                <% }) %>
                <% } %>
</ul>

<%- include('partials/footer') -%>